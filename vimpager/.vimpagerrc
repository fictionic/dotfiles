" vim:filetype=vim

colorscheme SlateDarkBlue
syntax on
set nonumber
set mouse=n
set hlsearch

nnoremap <space>l :nohl<CR>

" smart case-sensitivity in regex searches
set ignorecase
set smartcase

unmap w
unmap b
unmap f
unmap e
unmap y
unmap n
unmap N
nnoremap gk k
nnoremap gl l

set iskeyword+=-

let vimpager_disable_ansiesc = 1
