# MPC HOTKEYS
"mpc toggle"
	Alt + space
"mpc stop"
	Control+shift + Next
"mpc play"
	Control+Shift + p
"mpc next"
	Control+Shift + period
"mpc prev"
	Control+Shift + comma
"mpc volume +5"
	Control+Alt + Up
"mpc volume -5"
	Control+Alt + Down
"mpc seek +00:00:05"
	Control+Alt + Right
"mpc seek -00:00:05"
	Control+Alt + Left
"mpc single; mpc repeat"
	Control+Alt + r

# SCREEN BRIGHTNESS
# course adjustment
"xbacklight-exact -e -inc 25"
	XF86MonBrightnessUp
"xbacklight-exact -e -dec 25"
	XF86MonBrightnessDown
# fine adjustment
"xbacklight-exact -e -inc 5"
	Shift + XF86MonBrightnessUp
"xbacklight-exact -e -dec 5"
	Shift + XF86MonBrightnessDown
# superfine adjustment
"xbacklight-exact -e -inc 1"
	Control + Shift + XF86MonBrightnessUp
"xbacklight-exact -e -dec 1"
	Control + Shift + XF86MonBrightnessDown
# DPMS control
"dpms-toggle.sh"
	Control + Alt + d

# VOLUME KEYS
"pulseaudio-ctl up"
	XF86AudioRaiseVolume
"pulseaudio-ctl down"
	XF86AudioLowerVolume
"pulseaudio-ctl mute"
	XF86AudioMute

